@model TryLogin.Models.CgppDivision

@{

    Layout = (int)Session["Role_Id"] == 1 ? "~/Views/Shared/_LayoutAdmin.cshtml" : "~/Views/Shared/_LayoutUser.cshtml";
}
@Styles.Render("~/Content/css5")
@Scripts.Render("~/bundles/modernizr")
@*<h2>@((int)Session["Role_Id"] == 1 ? "Admin" : "User")</h2>*@



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Smart Login Form Responsive Widget Template:: W3layouts</title>
        <!-- Meta tag Keywords -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="keywords" content="Smart Login Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
        <script type="application/x-javascript">
             addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
            function hideURLbar(){ window.scrollTo(0,1); } </script>
        <!-- Meta tag Keywords -->
        <!-- css files -->
        <link href="css/style.css" rel="stylesheet" type="text/css" media="all">
        <!-- online-fonts -->
        <link href="//fonts.googleapis.com/css?family=Roboto+Slab:100,300,400,700Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900iSlabo+27px&subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
        <!--//online-fonts -->
        <body>
            <!--header-->
            <div class="agileheader">
                <h1>SMS CREATE DIVISION</h1>
            </div>
            <!--//header-->
            <!--main-->
            <div class="main-w3l">
                <div class="w3layouts-main">
                    <h2>Create Division</h2>
                    <form action="#" method="post">
                        <div class="form-group">
                            <div class="col-md-2 tom"
                            <label>Division Name </label>
                        </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", maxlength = "70", @type = "text", placeholder = "Enter Division Name", style = "border-color:black" } })
                            @Html.ValidationMessageFor(m => m.Name)
                            <div class="form-group">
                                <div class="col-md-2 tom"
                                     @Html.LabelFor(model => model.OfficeId, "OfficeId", htmlAttributes: new { @class = "control-label col-md-2" })
                               </div>
                                @Html.DropDownList("OfficeId", null, htmlAttributes: new { @class = "form-control" })

                                <div class="clear"></div>
                                <input type="submit" value="Save" class="btn btn-default" style="background-color:yellow;" />
</form>
                   
                </div>
            </div>
            <!--//main-->
            <!--footer-->
            <div class="footer-w3l">
               
            </div>
            <!--//footer-->
         
        </body>
        </html>
}




