@model TryLogin.ViewModel.PhonebookVM
@{
    ViewBag.Title = "Create Phonebook Sms Management System";
    Layout = (int)Session["Role_Id"] == 1 ? "~/Views/Shared/_LayoutAdmin.cshtml" : "~/Views/Shared/_LayoutUser.cshtml";
}
@Styles.Render("~/Content/css6")
@Scripts.Render("~/bundles/modernizr")
<style>
    .form {
        background-color: black;
        color: whitesmoke;
        border: 6px solid black;
        margin: 20px;
        padding: 20px;
        width: 350px;
    }
</style>
@using (Html.BeginForm("Save", "Phonebooks"))
{
    <!--header-->
    <div class="agileheader">
        <h1 style="font-family:serif">SMS PHONE NUMBER</h1>
    </div>
    <!--//header-->
    <!--main-->
    <div class="main-w3l">
        <div class="w3layouts-main" style="height: auto !important; width: 90% !important; background: rgb(0 0 0 / 34%);">
            <h2>ADD Phone Number</h2>
            <form action="#" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class=" tom">
                                Phone Number  <label class="fa fa-phone-square" style="color:yellow"> </label>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Phonebook.CellphoneNum, new { htmlAttributes = new { @class = "form-control", maxlength = "11", @type = "number", placeholder = "Enter a Number", style = "border-color:black", minlength = "11" } })
                        @Html.ValidationMessageFor(m => m.Phonebook.CellphoneNum)


                        <div class="form-group">
                            <div class="tom">
                             FullName  <label class="fa fa-user" style="color:yellow"> </label>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Phonebook.FullName, new { htmlAttributes = new { @class = "form-control", maxlength = "50", @type = "text", placeholder = "Enter Your Full Name", style = "border-color:black" } })
                        @Html.ValidationMessageFor(m => m.Phonebook.FullName)

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <div class="tom">
                                Position  <label class="fa fa-location-arrow" style="color:yellow"> </label>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Phonebook.Position, new { htmlAttributes = new { @class = "form-control", maxlength = "50", @type = "text", placeholder = "Enter a Position", style = "border-color:black" } })
                        @Html.ValidationMessageFor(m => m.Phonebook.Position)
                        <div class="form-group">
                            <div class="tom">
                                Remarks  <label class="fa fa-arrow-circle-o-up" style="color:yellow"> </label>
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Phonebook.Remarks, new { htmlAttributes = new { @class = "form-control", maxlength = "50", @type = "text", placeholder = "Enter a Remarks", style = "border-color:black" } })
                        @Html.ValidationMessageFor(m => m.Phonebook.Remarks)

                
                    <div class="form-group">
                        <div class="tom">
                            GroupName  <label class="fa fa-location-arrow" style="color:yellow"> </label>
                        </div>

                        @Html.DropDownListFor( model => model.Phonebook.GroupId, new SelectList (Model.GroupList,"GroupId" , "GroupName" ) , new { @class= "form-control", required = "required", @placeholder = "Enter a Message Here", } )

                        <div class="clear"></div>
                        @Html.HiddenFor(o => o.Phonebook.PhoneId)
                        @Html.AntiForgeryToken()
                    </div>
                    </div>
                <div style="padding: 2% 0;">
                    <button class="btn btn-primary" id="toastrSuccess" style="background-color:yellow;color:black;width:200px;border-radius:20px;">CREATE</button>
                </div>
            </form>

        </div>
    </div>
    <!--//main-->
    <!--footer-->
    <div class="footer-w3l">

    </div>
    <script src="~/Scripts/Adminjsdash/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(function () {

            $("#MultipleDropdown").chosen();
            width: "100%"

        });

    </script>
}

